{
    "manifest_version": 3,
    "name": "Currency converter",
    "version": "1.1",
    "description": "Convert currency",
    "permissions": [
        "activeTab"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "popup.html",
                "popup.css",
                "loader.css"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}